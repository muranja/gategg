                    <button onclick="game.hint(); closeMobileMenu();" class="mobile-control-btn btn-hint">üí° Get Hint</button>
                    <button onclick="game.undo(); closeMobileMenu();" class="mobile-control-btn">‚Ü©Ô∏è Undo Move</button>
                    <button onclick="game.openSettings(); closeMobileMenu();" class="mobile-control-btn">‚öôÔ∏è Settings</button>
                    <button onclick="game.init(); closeMobileMenu();" class="mobile-control-btn">‚ú® New Game</button>
                </div>
            </div>

            <div id="loading-overlay">
                <div class="logo-icon loader-icon"></div>
            </div>

            <div id="pause-overlay">
                <h2>PAUSED</h2>
                <button class="modal-btn" style="width: auto; padding: 15px 40px;" onclick="game.togglePause()">RESUME</button>
            </div>

            <div id="board">
                <div class="top-row">
                    <div id="stock" class="slot empty-grip" onpointerdown="game.clickStock()" aria-label="Stock Pile"><span class="slot-icon">‚Ü∫</span></div>
                    <div id="waste" class="slot" aria-label="Waste Pile"></div>
