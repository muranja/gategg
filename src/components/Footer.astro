<style>
	footer {
		background: linear-gradient(135deg, #1A73E8 0%, #1565C0 100%);
		color: #FAFAFA;
		padding: 4rem 2rem 2rem 2rem;
		margin-top: auto;
		border-top: 4px solid var(--accent-gold);
	}

	.footer-content {
		display: grid;
		grid-template-columns: 2fr 1fr 1fr 1.5fr;
		gap: 2rem;
		max-width: 1200px;
		margin: 0 auto 3rem auto;
	}

	.footer-section h3 {
		color: #34D399;
		margin-bottom: 1rem;
		font-size: 1.5rem;
		font-weight: 700;
	}

	.footer-section h4 {
		color: #FAFAFA;
		margin-bottom: 1rem;
		font-size: 1.1rem;
		font-weight: 600;
	}

	.footer-section p {
		color: #E1F5FE;
		line-height: 1.6;
		margin-bottom: 1rem;
	}

	.trust-icons {
		display: flex;
		gap: 1rem;
		margin-top: 1rem;
		font-size: 1.2rem;
	}

	.footer-section ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.footer-section li {
		margin-bottom: 0.5rem;
	}

	.footer-section a {
		color: #81D4FA;
		text-decoration: none;
		transition: color 0.2s;
	}

	.footer-section a:hover {
		color: var(--accent-gold);
		text-decoration: underline;
	}

	.newsletter {
		display: flex;
		gap: 0.5rem;
		margin-bottom: 1rem;
	}

	.newsletter input {
		flex: 1;
		padding: 0.5rem;
		border: 1px solid #81D4FA;
		border-radius: 4px;
		background: rgba(255,255,255,0.1);
		color: #FAFAFA;
		font-size: 0.9rem;
	}

	.newsletter input::placeholder {
		color: #B3E5FC;
	}

	.newsletter button {
		padding: 0.5rem 1rem;
		background: var(--accent-gold);
		color: #1a2c42;
		border: none;
		border-radius: 4px;
		font-weight: 600;
		cursor: pointer;
		transition: background 0.2s;
	}

	.newsletter button:hover {
		background: #FDE68A;
	}

	.social-links {
		display: flex;
		gap: 1rem;
		font-size: 1.2rem;
	}

	.social-links a {
		transition: transform 0.2s;
	}

	.social-links a:hover {
		transform: scale(1.2);
	}

	.footer-bottom {
		border-top: 1px solid rgba(255,255,255,0.1);
		padding-top: 2rem;
		max-width: 1200px;
		margin: 0 auto;
		text-align: center;
	}

	.stats {
		display: flex;
		justify-content: center;
		gap: 2rem;
		margin-bottom: 1rem;
		flex-wrap: wrap;
	}

	.stats span {
		background: rgba(255,255,255,0.1);
		padding: 0.5rem 1rem;
		border-radius: 20px;
		font-size: 0.9rem;
		font-weight: 500;
	}

	.copyright {
		font-size: 0.9rem;
		color: #E1F5FE;
		margin: 1rem 0 0.5rem 0;
	}

	.disclaimer {
		font-size: 0.8rem;
		color: #B3E5FC;
		line-height: 1.4;
		margin: 0;
	}

	@media (max-width: 768px) {
		.footer-content {
			grid-template-columns: 1fr 1fr;
			gap: 2rem;
		}

		.footer-section {
			margin-bottom: 2rem;
		}

		.stats {
			flex-direction: column;
			align-items: center;
			gap: 0.5rem;
		}

		.stats span {
			font-size: 0.8rem;
		}
	}

	@media (max-width: 480px) {
		footer {
			padding: 2rem 1rem 1rem 1rem;
		}

		.footer-content {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.newsletter {
			flex-direction: column;
		}

		.social-links {
			justify-content: center;
		}

		.disclaimer {
			font-size: 0.75rem;
		}
	}
</style>
